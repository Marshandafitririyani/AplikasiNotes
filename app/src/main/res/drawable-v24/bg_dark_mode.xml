<?xml version="1.0" encoding="utf-8"?>
<!--TODO 1buat resource dengan nama background_switch_dark_mode.xml di dalam package drawable-->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!--TODO Ketika Switch ada aksi klik -->
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/gray" />
            <!--membuat lengkungan pada background-->
            <corners android:radius="100dp" />
            <!--membuat border pada background-->
            <stroke android:width="1dp"
                android:color="@android:color/white" />
            <size android:height="20sp" />
        </shape>
    </item>
    <!--TODO Ketika Switch tidak ada aksi klik-->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/white" />
            <corners android:radius="100dp" />
            <stroke android:width="1dp"
                android:color="@android:color/black" />
            <size android:height="20dp" />
        </shape>
    </item>
</selector>
